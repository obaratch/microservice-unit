{
  "name": "@obalab/microservice-unit",
  "description": "a micro-webservice scaffold",
  "version": "0.0.0",
  "author": "Takashi Obara",
  "license": "MIT",
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "scripts": {
    "dev": "run-p start-backend-dev start-frontend-dev",
    "start": "run-p start-backend start-frontend >> log/all.log 2>&1",
    "start-frontend-dev": "vite --open",
    "build-frontend": "vite build --mode production",
    "start-frontend": "serve -s -n -u -l 8080 app-frontend/dist",
    "start-backend-dev": "cross-env NODE_ENV=dev nodemon app-backend/src/main.js | pino-pretty -c -t SYS:'yyyy-mm-dd HH:MM:ss.l' -i hostname",
    "start-backend": "node app-backend/src/main.js"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.1.2",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "jest": "^28.1.3",
    "modern-css-reset": "^1.4.0",
    "nodemon": "^2.0.19",
    "pino-pretty": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "sass": "^1.54.3",
    "vite": "^3.0.4"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "helmet": "^5.1.1",
    "http-status-codes": "^2.2.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "pino": "^8.4.0",
    "sequelize": "^6.21.3",
    "serve": "^14.0.1",
    "sqlite3": "^5.0.11",
    "statman-stopwatch": "^2.13.0",
    "ws": "^8.8.1"
  },
  "nodemonConfig": {
    "ignore": [
      "app-frontend/*",
      "log/*",
      "*/node_modules/*",
      "*/test/*"
    ]
  }
}
